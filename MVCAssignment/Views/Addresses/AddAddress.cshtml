
@{
    ViewBag.Title = "Add Address";
}

@model MVCAssignment.Models.AddressesViewModels


<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>

<h4 id="id1" style="color:purple"></h4>
<hr />

@using (Ajax.BeginForm("Insert", "Addresses", new AjaxOptions
{
    HttpMethod = "POST",
    UpdateTargetId = "id1",
    LoadingElementId = "LoadingImage",
    OnSuccess = "OnSuccess",
    OnFailure = "OnFailure"

}))
{

    <div class="row">
        <div class="col-md-8">
            <section id="AddContactForm">
                <div class="form-group">
                    <div class="col-md-10">
                       Address Line 1:  @Html.TextBoxFor(m => m.AddressLine1, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        Address Line 2:  @Html.TextBoxFor(m => m.AddressLine2, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        City:  @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        State Code:  @Html.TextBoxFor(m => m.StateCode, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        Zip Code:  @Html.TextBoxFor(m => m.Zip, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Add Address" class="btn btn-info" />
                    </div>
                </div>
            </section>
        </div>
    </div>


}


<script type="text/javascript">

    function OnSuccess(data) {
        if (data.isRedirect) {
            window.location.href = data.redirectUrl;
        }
     }
    function OnFailure(data) {
        alert('HTTP Status Code: ' + data.param1 + '  Error Message: ' + data.param2);
     }
</script>
